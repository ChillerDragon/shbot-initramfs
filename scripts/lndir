#!/usr/bin/env bash
shopt -s extglob dotglob nullglob

if (( $# != 2 )); then
    printf >&2 'Usage: lndir source dest\n'
    exit 1
fi

cd "$2" ||Â exit
lndir() {
    local file dir
    for file in "$1"/!(.git); do
        if [[ -d $file ]]; then
            dir=${file#"$1/"}
            [[ $file = /* ]] || file=../$file
            mkdir -p "$dir" &&
            ( cd "$dir" && lndir "$file" )
        else
            ln -s "$file" .
        fi
    done
}

lndir "$1"
