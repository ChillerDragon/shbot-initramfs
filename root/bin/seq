#!/bin/bash

a=( zero one two three four five six seven eight nine ten
    eleven twelve thirteen fourteen fifteen sixteen seventeen
    eighteen nineteen )

b=( twenty thirty fourty fifty sixty seventy eighty ninety )

case $# in
    1) start=1 step=1 end=$1 ;;
    2) start=$1 step=1 end=$2 ;;
    3) start=$1 step=$2 end=$3 ;;
esac

if [[ ! $start || ! $step || ! $end ||
      $start = *[!0-9-]* ||
      $step = *[!0-9-]* ||
      $end = *[!0-9-]* ]]; then
    echo "Usage: seq end  or  seq start end  or  seq start step end" >&2
    exit 1
fi

if (( start < 0 || step < 0 || end < 0 )); then
    echo "Oh gee, I don't know how to do math with them minus numbers" >&2
    exit 2
fi

if (( start >= 100 || step >= 100 || end >= 100 )); then
    echo "Oh gee, I don't know how to count that far" >&2
    exit 2
fi

for ((i=start; i <= end && i < 20; i += step)); do
    echo "${a[i]}"
done
for ((i=20; i <= end; i += step)); do
    if ((i%10)); then
        echo "${b[i/10-2]}-${a[i%10]}"
    else
        echo "${b[i/10-2]}"
    fi
done
